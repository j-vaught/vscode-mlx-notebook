{
  "name": "vscode-mlx-notebook",
  "displayName": "MATLAB Live Script Editor",
  "description": "Edit, execute, and save MATLAB Live Script (.mlx) files as notebooks",
  "version": "0.9.0",
  "publisher": "j-vaught",
  "author": "J.C. Vaught",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/j-vaught/vscode-mlx-notebook"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Notebooks",
    "Programming Languages"
  ],
  "icon": "images/icon.png",
  "keywords": [
    "matlab",
    "notebook",
    "live-script",
    "mlx",
    "simulation"
  ],
  "homepage": "https://github.com/j-vaught/vscode-mlx-notebook",
  "bugs": {
    "url": "https://github.com/j-vaught/vscode-mlx-notebook/issues"
  },
  "galleryBanner": {
    "color": "#73000A",
    "theme": "dark"
  },
  "activationEvents": [
    "onNotebook:mlx-notebook"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "notebooks": [
      {
        "type": "mlx-notebook",
        "displayName": "MATLAB Live Script",
        "selector": [
          {
            "filenamePattern": "*.mlx"
          }
        ]
      }
    ],
    "notebookRenderer": [
      {
        "id": "mlx-output-renderer",
        "displayName": "MLX Output Renderer",
        "entrypoint": "./dist/renderer.js",
        "mimeTypes": [
          "application/mlx-output+json"
        ]
      }
    ],
    "configuration": {
      "title": "MATLAB Live Script Editor",
      "properties": {
        "mlx-notebook.executionBackend": {
          "type": "string",
          "enum": [
            "cli",
            "python-engine"
          ],
          "default": "cli",
          "description": "MATLAB execution backend. 'cli' spawns matlab -batch per cell. 'python-engine' uses the MATLAB Engine for Python for persistent sessions."
        },
        "mlx-notebook.matlabPath": {
          "type": "string",
          "default": "",
          "description": "Path to the MATLAB executable. Leave empty to auto-detect."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.0",
    "jszip": "^3.10.0"
  }
}
